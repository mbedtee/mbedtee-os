config UART
	bool "UART module"
	default y
	help
		Say Y here to enable the UART module.

if UART

choice
	prompt "UART Selection"
	default UART_PL011 if ARM
config UART_16550
	bool "UART 16550A"
	help
		Enable UART 16550A.
config UART_PL011
	bool "UART PL011"
	help
		Enable ARM PL011 UART.
config UART_SIFIVE
	bool "UART SiFive"
	help
		Enable SiFive UART.
config UART_CDNS
	bool "UART Cadence"
	help
		Enable Cadence UART.
config UART_IMX
	bool "UART IMX"
	help
		Enable IMX UART.
endchoice

endif

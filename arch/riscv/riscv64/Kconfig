if RISCV64

config MMU_SV39
	bool "sv39 mmu"
	depends on MMU
	help
		Enables the SV39 MMU.

config CFLAGS
	string "RISCV64_CFLAGS"
	default "-mabi=lp64d -march=rv64imafdc_zicsr_zifencei_zicbom -mstrict-align -mcmodel=medany -mno-riscv-attribute"
	help
		Define the default compile FLAGS.

config PIC_CFLAGS
	string "RISCV64_PIC_CFLAGS"
	default "-fPIC"
	help
		Define the default compile PIC FLAGS.

config VA_BITS
	int "VA Bits"
	default 39

endif
